<body>
    <div class="auth-container">
        <div class="logo">
            <h1>Visionary Technologies</h1>
            <p>Customer Authentication Portal</p>
        </div>

        <div id="customerInfo" class="customer-info" style="display: none;">
            <h3>Authentication Request</h3>
            <p>Hello, <strong id="customerName"></strong></p>
            <p>Please complete the authentication process to continue with your call.</p>
        </div>

        <!-- Invalid Session -->
        <div class="auth-step" id="invalidSession">
            <div class="error-message">
                <h2>⚠️ Invalid Session</h2>
                <p>This authentication link is invalid or has expired.</p>
                <p>Please contact customer service for assistance.</p>
            </div>
        </div>

        <!-- Step 1: Identity Verification -->
        <div class="auth-step" id="step1">
            <h2 class="step-title">Verify Your Identity</h2>
            <p class="step-description">Please confirm your information to proceed</p>
            
            <form id="identityForm">
                <div class="form-group">
                    <label for="verifyPhone">Last 4 digits of phone number</label>
                    <input type="text" id="verifyPhone" maxlength="4" placeholder="1234" required>
                </div>
                
                <div class="form-group">
                    <label for="verifyEmail">Email address</label>
                    <input type="email" id="verifyEmail" placeholder="your@email.com" required>
                </div>
                
                <button type="submit" class="btn">Continue</button>
            </form>
        </div>

        <!-- Step 2: MFA Code -->
        <div class="auth-step" id="step2">
            <h2 class="step-title">Enter Verification Code</h2>
            <p class="step-description">Enter the 6-digit code we sent to your device</p>
            
            <div class="demo-info">
                <strong>Demo Code:</strong> 123456
            </div>

            <form id="mfaForm">
                <div class="mfa-code-input">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="0">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="1">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="2">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="3">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="4">
                    <input type="text" maxlength="1" class="mfa-digit" data-index="5">
                </div>
                
                <button type="submit" class="btn">Verify Code</button>
                <button type="button" class="btn btn-secondary" id="backBtn">Back</button>
            </form>
        </div>

        <!-- Step 3: Success -->
        <div class="auth-step" id="step3">
            <div class="success-message">
                <div class="success-icon">✓</div>
                <h2 class="step-title">Authentication Successful</h2>
                <p class="step-description">You have been successfully authenticated. You may now continue with your call.</p>
                <p style="color: #888; font-size: 14px; margin-top: 20px;">
                    This window will close automatically in <span id="countdown">10</span> seconds.
                </p>
            </div>
        </div>

        <!-- Loading State -->
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Processing authentication...</p>
        </div>
    </div>

    <script>
        let sessionId = null;
        let sessionData = null;

        // Get session ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        sessionId = urlParams.get('session');

        // MFA digit input handling
        const mfaDigits = document.querySelectorAll('.mfa-digit');
        
        mfaDigits.forEach((input, index) => {
            input.addEventListener('input', (e) => {
                const value = e.target.value;
                if (value && index < mfaDigits.length - 1) {
                    mfaDigits[index + 1].focus();
                }
            });
            
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    mfaDigits[index - 1].focus();
                }
            });
        });

        function showStep(stepId) {
            document.querySelectorAll('.auth-step').forEach(step => {
                step.classList.remove('active');
            });
            document.getElementById(stepId).classList.add('active');
        }

        function showLoading(show) {
            document.getElementById('loading').classList.toggle('active', show);
        }

        function initializeSession() {
            if (!sessionId) {
                showStep('invalidSession');
                return;
            }

            const authDataStr = localStorage.getItem(`auth_${sessionId}`);
            if (!authDataStr) {
                showStep('invalidSession');
                return;
            }

            sessionData = JSON.parse(authDataStr);
            
            // Display customer info
            document.getElementById('customerName').textContent = sessionData.customerName;
            document.getElementById('customerInfo').style.display = 'block';
            
            // Pre-fill verification fields
            document.getElementById('verifyPhone').placeholder = sessionData.customerPhone.slice(-4);
            document.getElementById('verifyEmail').value = sessionData.customerEmail;
            
            showStep('step1');
        }

        // Identity verification
        document.getElementById('identityForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const phone = document.getElementById('verifyPhone').value;
            const email = document.getElementById('verifyEmail').value;
            
            // Simple validation
            if (phone === sessionData.customerPhone.slice(-4) && email === sessionData.customerEmail) {
                showLoading(true);
                setTimeout(() => {
                    showLoading(false);
                    showStep('step2');
                    mfaDigits[0].focus();
                }, 1500);
            } else {
                alert('Information does not match our records. Please try again.');
            }
        });

        // MFA verification
        document.getElementById('mfaForm').addEventListener('submit', (e) => {
            e.preventDefault();
            
            const code = Array.from(mfaDigits).map(input => input.value).join('');
            
            if (code === '123456') {
                showLoading(true);
                
                // Update session status
                sessionData.status = 'completed';
                sessionData.completedAt = new Date().toISOString();
                localStorage.setItem(`auth_${sessionId}`, JSON.stringify(sessionData));
                
                setTimeout(() => {
                    showLoading(false);
                    showStep('step3');
                    startCountdown();
                }, 2000);
            } else {
                // Mark as failed
                sessionData.status = 'failed';
                sessionData.failedAt = new Date().toISOString();
                localStorage.setItem(`auth_${sessionId}`, JSON.stringify(sessionData));
                
                alert('Invalid verification code. Authentication failed.');
            }
        });

        // Back button
        document.getElementById('backBtn').addEventListener('click', () => {
            showStep('step1');
        });

        function startCountdown() {
            let seconds = 10;
            const countdownEl = document.getElementById('countdown');
            
            const interval = setInterval(() => {
                seconds--;
                countdownEl.textContent = seconds;
                
                if (seconds <= 0) {
                    clearInterval(interval);
                    window.close();
                }
            }, 1000);
        }

        // Initialize on page load
        window.addEventListener('load', initializeSession);
    </script>
</body>
</html>
